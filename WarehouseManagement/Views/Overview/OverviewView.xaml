<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WarehouseManagement.Views.Overview.OverviewView">
    <ContentView.Content>
        <VerticalStackLayout>
            <Border>
                <HorizontalStackLayout>
                    <Button Text="Option" />
                    <Editor Placeholder="Search" />
                </HorizontalStackLayout>
            </Border>
            <ListView ItemsSource="{Binding ArticleItems}" />
        </VerticalStackLayout>
    </ContentView.Content>
</ContentView>